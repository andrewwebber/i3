#!/usr/bin/bash -ex
#useradd -m -g users -G wheel,storage,power,lp,network,audio,video,optical -s /bin/bash awebber
sudo pacman -Syu yubikey-manager yubico-pam networkmanager-openvpn openvpn freerdp neovim ripgrep gdm peek simple-scan htop gnome-terminal curl wget git vim i3 sway i3blocks i3lock feh evince nemo file-roller networkmanager gthumb pulseaudio blueman pulseaudio-bluetooth arandr xfce4-power-manager pavucontrol compton pasystray rofi nodejs npm yarn ttf-font-awesome docker python-pip cups ca-certificates lxappearance gtk-chtheme networkmanager-dispatcher-ntpd cronie networkmanager network-manager-applet acpid cups avahi dbus udisks2 vlc chromium i3-gaps ttf-font-awesome awesome-terminal-fonts otf-font-awesome adobe-source-code-pro-fonts jsoncpp jgmenu dmenu rofi conky nitrogen dunst albert compton mate-power-manager adapta-gtk-theme papirus-icon-theme capitaine-cursors xorg xorg-xinit xorg-server networkmanager-openconnect bash-completion acpi tk go ebtables dnsmasq x11-ssh-askpass openssh seahorse gnome-keyring dunst bridge-utils xfce4-notifyd gnome-screenshot powerline powerline-fonts pass neovim bluez bluez-utils ttf-fira-code extra/noto-fonts extra/noto-fonts-emoji w3m hplip aspell-en
fc-cache -f -v
sudo systemctl enable gdm
sudo cp ./custom.conf /etc/gdm/custom.conf
sudo systemctl start NetworkManager
sudo systemctl enable NetworkManager
sudo systemctl enable org.cups.cupsd.service
sudo systemctl start pcscd.service
sudo systemctl enable pcscd.service

curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
curl -fLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
cp .* ~/ || true
cp -r .* ~/ || true
mkdir ~/Downloads
cp ./austria.jpg ~/Downloads
cd ~/projects && git clone https://github.com/powerline/powerline

mkdir -p ~/.config/powerline
cat <<-'EOF' > ~/.config/powerline/config.json
{
    "ext": {
        "shell": {
            "theme": "default_leftonly"
        }
    }
}
EOF
powerline-daemon --replace
cd
rm -rf .git
cd -
cd ~/projects; git clone https://aur.archlinux.org/yay.git; cd yay; makepkg -si
( ln -sf ~/projects/i3/.vimrc ~/.vimrc; ln -sf ~/projects/i3/.gitconfig ~/.gitconfig)
( mkdir ~/.config/nvim || true; ln -sf ~/projects/i3/.vimrc ~/.config/nvim/init.vim)

./install-rust
yay neovim-symlinks
yay valgrind
yay bash-it
