# vim: filetype=muttrc
set from =  "andrew@deepc.ai"
set imap_user = "andrew@deepc.ai"
# Password assigned from decrypted file
# set imap_pass = "`pass neomutt/deepc`"
set imap_authenticators="oauthbearer:xoauth2"
set imap_oauth_refresh_command="~/.local/bin/mutt_oauth2.py \
	~/andrew@deepc.ai.tokens \
	--provider google \
    --encryption-pipe "gpg --encrypt --recipient andrew@deepc.ai>" \
    --decryption-pipe "gpg --encrypt --recipient andrew@deepc.ai>" \
    --email andrew@deepc.ai \
	--client_id 536220415180-s2f65ora8pnpr78tqpcmssm2h8l952ra.apps.googleusercontent.com \
	--client_secret `pass console.google.com/credentials/neomutt/536220415180-s2f65ora8pnpr78tqpcmssm2h8l952ra.apps.googleusercontent.com`"

set smtp_authenticators=${imap_authenticators}
set smtp_oauth_refresh_command=${imap_oauth_refresh_command}
set imap_check_subscribed

# Specifies the default location of your mailboxes
# set folder = "imaps://imap.gmail.com:993"
set folder = "imaps://$imap_user@imap.gmail.com:993"

# Configure Simple Mail Transfer Protocol for sending mail
# for Gmail
set smtp_url = "smtp://andrew@deepc.ai@smtp.gmail.com:587/"
# for G Suite with own domain
#set smtp_url = "smtps://yourusername@yourdomain.ext@smtp.gmail.com:587"
set smtp_authenticators="oauthbearer"
set smtp_oauth_refresh_command="~/projects/i3/oauth2.py --quiet --user=andrew@deepc.ai\
    --client_id=536220415180-s2f65ora8pnpr78tqpcmssm2h8l952ra.apps.googleusercontent.com --client_secret=`pass console.google.com/credentials/neomutt/536220415180-s2f65ora8pnpr78tqpcmssm2h8l952ra.apps.googleusercontent.com` \
    --refresh_token=`pass console.google.com/refresh_tokens/neomutt/andrew@deepc.ai`"
# set smtp_pass = `pass neomutt/deepc`

# Location of inbox
set spoolfile = "+[Gmail]/Important"
# Location of drafts
set postponed = "+[Gmail]/Drafts"

# Activate caching, as it can greatly improve speed
set header_cache = "~/.mutt/cache/deepc/headers"
set message_cachedir = "~/.mutt/cache/deepc/bodies"

# Disable saving outgoing mail since Gmail saves them by default.
set record = ""
set signature="~/projects/i3/.mutt/signature_deepc"

